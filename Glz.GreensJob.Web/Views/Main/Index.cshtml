                    $em_txt = '报名已暂停';
                    $em_css = 'fc-70';
                } else {
                    lstatus = 5;
                    $tag = '开启报名';
                    $but = '暂停报名';
                    $em_txt = '招聘中';
                    $em_css = 'fc-fa';
                }
                $.ajax({
                    type: 'POST',
                    url: ajaxUrl,
                    data: {
                        id: pid,
                        citydomain: 'bj'
                    },
                    dataType: 'json'
                }).done(function (json) {
                    if (json.code === 0) {
                        $target.find('a').html($but);
                        $('#em-' + pid).attr('class', $em_css);
                        $('#em-' + pid).html($em_txt);
                        $target.attr('data-lstatus', lstatus);
                        if (lstatus == 5) {
                            $('#refresh_span_' + pid).show();
                        } else {
                            $('#refresh_span_' + pid).hide();
                        }
                        window.alert($tag + '成功');
                    } else {
                        window.alert(json.msg);
                    }
                }).fail(function () {
                    window.alert('操作失败,请刷新页面重试');
                });
            }
            $("#delPost").live('click', function (e) {
                var $target = $(e.currentTarget);
                var pid = $target.attr('data-pid');
                $.ajax({
                    type: 'GET',
                    url: '/employer/post/ajaxdel/?act=judge',
                    data: {
                        id: pid,
                        citydomain: 'bj'
                    },
                    dataType: 'json'
                }).done(function (json) {
                    if (json.code == 0) {
                        ToDelPost(pid);
                    } else if (json.code > 0) {
                        if (window.confirm('请确定该职位所有人员工资已结清')) {
                            ToDelPost(pid);
                        }
                    }
                }).fail(function () {
                    window.alert('操作失败,请刷新页面重试');
                });
            });

            function ToDelPost(pid) {
                if (window.confirm('确定要删除该职位吗？')) {
                    $.ajax({
                        type: 'GET',
                        url: '/employer/post/ajaxdel?act=del',
                        data: {
                            id: pid,
                            citydomain: 'bj'
                        },
                        dataType: 'json'
                    }).done(function (data) {
                        if (data.code == 1) {
                            alert('删除成功')
                            window.location.reload();
                        } else {
                            alert('删除失败');
                        }
                    });
                }
            }
        });
    </script>
