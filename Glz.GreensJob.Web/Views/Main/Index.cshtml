            $(".refresh_post").click(function () {
                if ($(this).hasClass('click_run_out')) {
                    alert('当天刷新次数已用完，请明天再来！');
                    return false;
                }
                if ($(this).hasClass('click_disabled')) {
                    alert('请勿连续刷新，隔十分钟再操作哦');
                    return false;
                }
                var pid = $(this).data('pid');
                $(this).addClass('click_disabled');
                setTimeout(function () {
                    $(".refresh_post_" + pid).removeClass('click_disabled');
                }, 10 * 60 * 1000);
                $.ajax({
                    type: 'GET',
                    url: 'http://vip.doumi.com/employer/post/ajaxrefreshpost',
                    data: {
                        id: pid
                    },
                    dataType: 'json',
                    success: function (ret) {
                        if (ret.code == '1' || ret.code == '-5') {
                            $(".refresh_post_" + pid).addClass('click_run_out');
                        }
                        if (ret.code >= 0) {
                            alert('刷新成功！');
                        } else {
                            alert(ret.msg);
                        }
                    }
                });
            });
            $(".refresh_post").mouseover(function () {
                var pid = $(this).data('pid');
                $('.refresh_post_hover_' + pid).show();
            });
            $(".refresh_post").mouseout(function () {
                var pid = $(this).data('pid');
                $('.refresh_post_hover_' + pid).hide();
            });
        });

